{
  "manifest_version": 3,
  "name": "No Metrics View",
  "version": "1.1",
  "description": "Hides Twitch viewer counters, Viewer counts from 7tv raid messages and Twitter like/retweet/bookmark/views counters.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html" 
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.twitch.tv/*",
        "*://x.com/*",
        "*://twitter.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}

